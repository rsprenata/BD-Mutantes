<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormHabilidadeActivity">

    <EditText
        android:id="@+id/editTextHabilidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Descrição da habilidade" />

    <Button
        android:id="@+id/btnAdEdHabilidade"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextHabilidade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Adicionar"
        android:onClick="adicionarHabilidade" />

    <Button
        android:id="@+id/button2"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAdEdHabilidade"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:onClick="voltar"
        android:text="Voltar" />
</RelativeLayout>